{
  "name": "sync-time-tool",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm:dev --workspace apps/server\" \"npm:dev --workspace apps/client\"",
    "build": "npm --workspaces run build",
    "lint": "npm --workspaces run lint",
    "test": "npm --workspaces run test"
  },
  "devDependencies": {
    "concurrently": "^9.0.1"
  }
}
